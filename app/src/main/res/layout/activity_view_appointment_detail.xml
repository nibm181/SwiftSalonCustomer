<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ViewAppointmentsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <LinearLayout
            android:id="@+id/layout_user_information"
            android:orientation="horizontal"
            android:weightSum="4"
            android:padding="8dp"
            android:elevation="10dp"
            android:background="@drawable/top_user_information_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/ic_account_circle_black_24dp"
                android:id="@+id/view_appointment_detail_prof_user_pic"
                android:layout_width="60dp"
                android:layout_height="60dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_user_name"
                    android:text="Eddy Lee"
                    android:textColor="@color/pearl_white"
                    android:textSize="22sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/view_appointment_detail_salon_name"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="Xen Salon"
                android:minHeight="40dp"
                android:textAlignment="center"
                android:background="@drawable/appointment_confirm_txt_middle"
                android:maxLines="2"
                android:layout_marginLeft="10dp"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/view_appointment_detail_hs_name"
                android:text="John Michelle"
                android:minHeight="40dp"
                android:textAlignment="center"
                android:background="@drawable/appointment_confirm_txt_middle"
                android:maxLines="2"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


        <TextView
            android:id="@+id/view_appointment_detail_date"
            android:text="2020-06-12"
            android:textColor="@color/dark"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:drawableStart="@drawable/ic_event_note_black_24dp"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/view_appointment_detail_salon_addr"
            android:text="69, charlie St, colombo-08"
            android:textColor="@color/dark"
            android:layout_marginLeft="10dp"

            android:textSize="20dp"
            android:drawableStart="@drawable/ic_baseline_location_black_on_24"
            android:drawablePadding="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/view_appointment_detail_contact"
            android:text="0766558947"
            android:layout_marginRight="10dp"
            android:textColor="@color/dark"
            android:textSize="20dp"
            android:drawablePadding="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:drawableLeft="@drawable/ic_baseline_local_phone_black_24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/view_appointment_detail_cancel_btn"
            android:text="Cancel Appointment"
            android:background="@drawable/appointment_confirm_txt_middle"
            android:textColor="@color/red"
            android:padding="10dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>



</RelativeLayout>