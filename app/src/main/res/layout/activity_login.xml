<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <TextView
        android:id="@+id/txt_mobile_no"
        android:text="Mobile No."
        android:textSize="22dp"
        android:layout_above="@+id/txt_password"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edit_txt_mobile_no"
        android:inputType="number"
        android:layout_alignBaseline="@+id/txt_mobile_no"
        android:layout_toEndOf="@+id/txt_mobile_no"
        android:textSize="22dp"
        android:layout_width="250dp"
        android:layout_height="50dp"/>

    <TextView
        android:id="@+id/txt_password"
        android:text="Password"
        android:textSize="22dp"
        android:layout_margin="10dp"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/edit_txt_password"
        android:inputType="textPassword"
        android:layout_alignBaseline="@+id/txt_password"
        android:layout_toEndOf="@+id/txt_password"
        android:layout_alignLeft="@+id/edit_txt_mobile_no"
        android:textSize="22dp"
        android:layout_width="250dp"
        android:layout_height="50dp"/>

    <Button
        android:id="@+id/btn_login"
        android:textSize="22dp"
        android:text="Login"
        android:layout_below="@id/edit_txt_password"
        android:layout_alignRight="@+id/edit_txt_password"
        android:layout_marginTop="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_forget_password"
        android:text="Forgot Password"
        android:textSize="22dp"
        android:textColor="@android:color/background_dark"
        android:layout_below="@+id/btn_login"
        android:layout_alignRight="@+id/btn_login"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>