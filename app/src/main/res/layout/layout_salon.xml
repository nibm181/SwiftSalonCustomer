<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_salon"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:outlineSpotShadowColor="@color/dark_purple"
    app:cardCornerRadius="15dp"
    android:layout_margin="10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_salon"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/profile_pic_background"
            android:src="@color/blue_btn_bg_color" />

        <TextView
            android:id="@+id/txt_salon_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:gravity="left"
            android:text="Salon #1"
            android:textColor="@color/dark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/rtb_salon"
            android:max="5"
            android:padding="8dp"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txt_salon_addr1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:text="Address of Salon #1"
            android:textColor="@color/dark"
            android:textSize="@dimen/textCardSize"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txt_salon_addr2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginBottom="5dp"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLines="1"
            android:text="Address of Salon #1"
            android:textColor="@color/dark"
            android:textSize="@dimen/textCardSize"
            android:textStyle="normal" />

    </LinearLayout>

</androidx.cardview.widget.CardView>